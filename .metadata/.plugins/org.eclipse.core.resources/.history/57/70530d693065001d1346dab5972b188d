package TPE;

import java.util.Iterator;

import java.util.Iterator;

public class ListaVinculada implements Iterable<Integer> {
	
	private int criterio; 
	private Nodo primerNodo;
	
	public ListaVinculada(int criterio) {
		this.primerNodo=null;
		this.criterio = criterio;
	}
	
	public void addNodo(int info) {
		Nodo temp = new Nodo(info, null);
		temp.setSiguienteNodo(primerNodo);
		primerNodo=temp;
	}
	

	@Override
	public Iterator<Integer> iterator() {
		return new IteradorNodo(this.primerNodo);
	}


}